<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fadcdc">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fadcdc"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/movie_now_playing_iv"
                android:layout_width="333dp"
                android:layout_height="258dp"/>

            <TextView
                android:id="@+id/movie_now_playing_tittle"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/movie_now_playing_iv"
                android:layout_marginTop="13dp"
                android:text="Tittle:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/movie_now_playing_date_release"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_below="@+id/movie_now_playing_tittle"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Release date:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/movie_now_playing_overview"
                android:layout_width="match_parent"
                android:layout_height="310dp"
                android:layout_below="@+id/movie_now_playing_date_release"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Overview:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000"
                android:textSize="20sp" />




        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>

